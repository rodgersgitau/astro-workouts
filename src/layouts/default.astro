---
import { ViewTransitions } from 'astro:transitions';
import nav from '../data/nav.json';

const { fullWidth = false } = Astro.props;
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Astro</title>
		<ViewTransitions />
	</head>
	<body>
		<header>
			<a href="/" rel="home">5 Apps They Said Astro Couldnâ€™t Handle</a>
			<nav>
				{nav.map((page) => <a href={page.slug}>{page.label}</a>)}
			</nav>
		</header>

		<main class:list={{ fullWidth }}>
			<slot />
		</main>

		<footer>
			<a href="https://astro.party">part of the Astro Party</a>
			<a href="https://github.com/learnwithjason/astro-5-apps">source code</a>
		</footer>

		<style is:global>
			* {
				box-sizing: border-box;
			}

			html {
				color: #1e2924;
				font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto,
					Helvetica, Arial, sans-serif, 'Apple Color Emoji', 'Segoe UI Emoji',
					'Segoe UI Symbol';
				font-size: 16px;
				line-height: 1.4;
			}

			body {
				margin: 0;
			}

			:is(h1, h2, h3, h4, h5, h6) {
				color: #0c1411;
			}

			::view-transition-group(*) {
				animation-duration: 1s;
				animation-timing-function: cubic-bezier(0.85, 0, 0.15, 1);
			}

			::view-transition-new(*):only-child {
				animation:
					300ms cubic-bezier(0, 0, 0.2, 1) both fade-in,
					500ms cubic-bezier(0.4, 0, 0.2, 1) both scale-in;
				animation-delay: 500ms;
			}

			::view-transition-old(*):only-child {
				animation:
					300ms cubic-bezier(0.4, 0, 1, 1) both fade-out,
					500ms cubic-bezier(0.4, 0, 0.2, 1) both scale-out;
				animation-delay: 200ms;
			}

			@keyframes fade-in {
				from {
					opacity: 0;
				}
			}

			@keyframes fade-out {
				to {
					opacity: 0;
				}
			}

			@keyframes scale-in {
				from {
					transform: scale(0.7);
				}
			}

			@keyframes scale-out {
				to {
					transform: scale(0.7);
				}
			}
		</style>

		<style>
			header {
				background: #00924e;
				color: #fff;
				padding: 2rem max(5vw, 2rem);
				text-align: center;
			}

			a {
				text-decoration: none;

				&:is(:active, :hover) {
					text-decoration: underline;
				}
			}

			a[rel='home'] {
				color: inherit;
				display: block;
				font-size: clamp(1rem, 4vw, 2.5rem);
				font-weight: 800;
				margin-block: 0 1rem;
			}

			nav {
				align-items: center;
				display: flex;
				flex-wrap: wrap;
				gap: 1rem;
				justify-content: center;

				& a {
					color: inherit;
					font-size: 0.875rem;
					font-weight: 600;

					@media (min-width: 1000px) {
						font-size: 1rem;
					}
				}
			}

			main {
				margin: 1rem auto;
				&:not(.fullWidth) {
					margin-block: 2rem;
					width: min(90vw, 54ch);
				}
			}

			footer {
				border-top: 1px solid #ebf5f0;
				display: flex;
				font-size: 0.875rem;
				gap: 1rem;
				justify-content: center;
				padding: 2rem max(2rem, 5vw);

				& a {
					color: #373d3a;
					text-decoration: underline;
				}
			}
		</style>
	</body>
</html>
