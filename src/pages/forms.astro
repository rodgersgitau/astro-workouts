---
import Layout from '../layouts/default.astro';

export const prerender = false;

let fname;
if (Astro.request.method === 'POST') {
  const formData = await Astro.request.formData();

  fname = formData.get('fname');
}
---

<Layout>
  {
    fname ? (
      <>
        <h1>You submitted the form!</h1>
        <p>Thanks, {fname}!</p>
        <p>
          <a href={Astro.url}>reset</a>
        </p>
      </>
    ) : (
      <>
        <h1>Form Submission Example</h1>
        <p>
          Submit the form to see Astroâ€™s dynamic form submission handling in
          action. For bonus points, try it with JavaScript disabled.
        </p>
        <form method="post">
          <label for="fname">First Name</label>
          <input type="text" name="fname" id="fname" />

          <button type="submit">Submit</button>
        </form>
      </>
    )
  }
</Layout>

<style>
  form {
    align-items: baseline;
    display: flex;
    gap: 0.5rem;
    margin-block-start: 2rem;
  }

  :is(label, input, button) {
    font-size: 1rem;
  }

  input {
    padding: 0.25rem 0.5rem;
  }

  button {
    background: #00924e;
    border: none;
    color: #fff;
    font-weight: 700;
    padding: 0.25rem 0.5rem;
  }
</style>
